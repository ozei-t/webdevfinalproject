    <script>
        function handleCheckboxChange(checkboxId, numericInputId) {
            var checkbox = document.getElementById(checkboxId);
            var numericInput = document.getElementById(numericInputId);

            if (checkbox.checked) {
                numericInput.disabled = false;
                numericInput.value = 1;
            } else {
                numericInput.disabled = true;
                numericInput.value = "";
            }
        }

        function handleNumericInputBlur(checkboxId, numericInputId) {
            var checkbox = document.getElementById(checkboxId);
            var numericInput = document.getElementById(numericInputId);

            if (numericInput.value === "") {
                checkbox.checked = false;
                numericInput.disabled = true;
            }
        }

        function handleSubmit() {
            var summary = "Order Summary:\n";
            var rows = document.getElementsByTagName("tr");

            for (var i = 1; i < rows.length; i++) {
                var checkbox = rows[i].getElementsByTagName("input")[0];
                var numericInput = rows[i].getElementsByTagName("input")[1];

                if (checkbox.checked) {
                    var product = rows[i].getElementsByTagName("td")[2].getElementsByTagName("div")[0].innerText;
                    var quantity = numericInput.value;
                    summary += product + ": " + quantity + "\n";
                }
            }

            alert(summary);
        }
    </script>
